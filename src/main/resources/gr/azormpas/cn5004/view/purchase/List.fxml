<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gr.azormpas.cn5004.controller.purchase.ListController">
   <center>
      <TableView fx:id="table" fixedCellSize="30.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="tableID" editable="false" minWidth="30.0" text="ID" />
            <TableColumn fx:id="tableDate" editable="false" minWidth="30.0" text="Date" />
            <TableColumn fx:id="tableItems" editable="false" minWidth="30.0" text="Items" />
            <TableColumn fx:id="tableCost" editable="false" minWidth="30.0" text="Cost" />
            <TableColumn fx:id="tableState" editable="false" minWidth="30.0" text="State" />
        </columns>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <top>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Label contentDisplay="RIGHT" text="View Purchases">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Label text="Double click field to edit. Press Enter to save changes.">
               <font>
                  <Font name="System Italic" size="12.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </top>
   <bottom>
      <HBox alignment="CENTER" spacing="25.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Back to Home">
               <graphic>
                <Button fx:id="btnHome" defaultButton="true" mnemonicParsing="false" onAction="#exit" text="⬅" />
               </graphic>
            </Label>
            <Label text="Add Purchase">
               <graphic>
                  <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#viewAdd" text="➕" />
               </graphic>
            </Label>
         </children>
         <BorderPane.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
</BorderPane>
