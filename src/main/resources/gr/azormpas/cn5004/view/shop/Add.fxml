<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gr.azormpas.cn5004.controller.shop.AddController">
   <bottom>
      <ToolBar>
        <items>
          <Button fx:id="btnAdd" defaultButton="true" mnemonicParsing="false" onAction="#addProduct" text="Add" />
            <Button fx:id="btnCancel" cancelButton="true" mnemonicParsing="false" onAction="#cancelAdd" text="Cancel" />
        </items>
      </ToolBar>
   </bottom>
   <top>
      <ToolBar BorderPane.alignment="CENTER">
         <items>
            <Label text="Add">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Text opacity="0.6" strokeType="OUTSIDE" strokeWidth="0.0" text="a new product...">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font></Text>
         </items>
      </ToolBar>
   </top>
   <center>
      <FlowPane hgap="10.0" vgap="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label contentDisplay="RIGHT" graphicTextGap="10.0" text="Name">
               <graphic>
                  <TextField fx:id="fldName" />
               </graphic>
            </Label>
            <Label contentDisplay="RIGHT" graphicTextGap="10.0" text="Cost / unit">
               <graphic>
                  <TextField fx:id="fldCost" promptText="12.34" />
               </graphic>
            </Label>
            <Label text="Available?">
               <graphic>
                  <CheckBox fx:id="chkIsAvailable" mnemonicParsing="false" />
               </graphic></Label>
            <Label contentDisplay="RIGHT" graphicTextGap="10.0" text="Details">
               <graphic>
                  <TextArea fx:id="fldInfo" promptText="(Optional)" wrapText="true" />
               </graphic>
            </Label>
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </FlowPane>
   </center>
</BorderPane>
